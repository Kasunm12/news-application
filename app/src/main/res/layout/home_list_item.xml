<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/ln_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/lay_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="0.90">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:layout_gravity="center|center_horizontal">

                <ImageView
                    android:id="@+id/box_1"
                    android:layout_width="353dp"
                    android:layout_height="106dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/boxlayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.41"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ImageContrastCheck" />


                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/ic_personal_acc"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginStart="15dp"
                    android:contentDescription="TODO"
                    android:padding="5dp"
                    android:src="@drawable/rose"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/box_1"
                    app:layout_constraintEnd_toEndOf="@+id/box_1"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/box_1"
                    app:layout_constraintTop_toTopOf="@+id/box_1"
                    app:layout_constraintVertical_bias="0.434"
                    tools:ignore="ImageContrastCheck" />


                <TextView
                    android:id="@+id/tv_personal_acc"
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:letterSpacing="0.04"
                    android:text="India's 1st monkeypox death confirmed"
                    android:textColor="#707070"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/box_1"
                    app:layout_constraintEnd_toEndOf="@+id/box_1"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/ic_personal_acc"
                    app:layout_constraintTop_toTopOf="@+id/box_1"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/watchIV"
                    android:layout_width="19dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintBottom_toBottomOf="@+id/box_1"
                    app:layout_constraintStart_toEndOf="@+id/ic_personal_acc"
                    app:layout_constraintTop_toBottomOf="@+id/tv_personal_acc"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/access_time" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:text="author - Apaar Sharma"
                    android:textColor="#C1BFBF"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/watchIV"
                    app:layout_constraintStart_toEndOf="@+id/watchIV"
                    app:layout_constraintTop_toBottomOf="@+id/tv_personal_acc" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>